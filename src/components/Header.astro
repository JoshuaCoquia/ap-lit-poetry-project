---
import Navbar from "./Navbar.astro";

---
<header>
    <h1>Words of William Stafford</h1>
	<Navbar />
</header>
<style lang="scss">
    @import "../styles/variables.scss";

    header {
        background-color: $background;
        box-shadow: 0px 2px 5px $secondary;
        position: sticky;
        top: 0;
        color: $text;
        display: inline-grid;
        grid-template-columns: auto 1fr;
        min-width: 100%;
        width: max-content;
        justify-items: start;
        align-items: center;
        z-index: 1;
        h1 {
            margin: 1.5rem 1.5rem;
        }
    }
</style>